end

local selectedoption
local selectedchar
local Library = loadstring(game:HttpGet("https://pastebin.com/raw/vff1bQ9F"))()
local Window = Library.CreateLib("Any Minecraft Game / SumitScripts Hub On Top", "DarkTheme")

local A = Window:NewTab("Main")
